<form class="form new-project-form">
    <div class="form-group">
        <label for="post-title">Post Title:</label>
        <textarea class="form-textarea" id="post-title" name="post-title">{{title}}</textarea>
    </div>
    <div class="form-group">
        <label for="post-contents">Contents:</label>
        <textarea class="form-input" id="post-contents" name="post-contents">{{contents}}</textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update Post</button>
    </div>
</form>

<script src="./js/dashboard.js"></script>